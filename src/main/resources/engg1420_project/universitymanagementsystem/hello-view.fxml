<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox spacing="12.0" prefHeight="384.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.guilab.HelloController">

    <!-- Sidebar (Dashboard) -->
    <VBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="15.0" style="-fx-background-color: #2C3E50;">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label fx:id="welcomeText" text="Dashboard" style="-fx-text-fill: white; -fx-font-size: 16px;"/>

        <Button onAction="#onHelloButtonClick" text="Dashboard" prefWidth="140.0" />
        <Button text="Subject Management" prefWidth="140.0" />
        <Button text="Event Management" prefWidth="140.0" />
        <Button text="Course Management" prefWidth="140.0" />
        <Button text="Student Management" prefWidth="140.0" />
        <Button text="Faculty Management" prefWidth="140.0" />
    </VBox>

    <!-- Main Content Area -->
    <Pane fx:id="mainContent" prefWidth="400.0" style="-fx-background-color: #ECF0F1;">
        <Label text="DASHBOARD" layoutX="50.0" layoutY="50.0"/>
    </Pane>

</HBox>
